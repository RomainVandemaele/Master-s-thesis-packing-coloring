@article{BranchAndCut,
title = "A branch-and-cut algorithm for the equitable coloring problem using a formulation by representatives ",
journal = "Discrete Applied Mathematics ",
volume = "164, Part 1",
pages = "34 - 46",
year = "2014",
note = "Combinatorial Optimization ",
issn = "0166-218X",
doi = "http://dx.doi.org/10.1016/j.dam.2011.10.008",
url = "http://www.sciencedirect.com/science/article/pii/S0166218X11003672",
author = "Laura Bahiense and Yuri Frota and Thiago F. Noronha and Celso C. Ribeiro",
keywords = "Equitable coloring",
keywords = "Branch-and-cut",
keywords = "Tabu search heuristic ",
abstract = "An equitable k -coloring of a graph is defined by a partition of its vertices into k disjoint stable subsets, such that the difference between the cardinalities of any two subsets is at most one. The equitable coloring problem consists of finding the minimum value of k such that a given graph can be equitably k -colored. We present two new integer programming formulations based on representatives for the equitable coloring problem. We propose a primal constructive heuristic, branching strategies, and the first branch-and-cut algorithm in the literature of the equitable coloring problem. The computational experiments were carried out on randomly generated graphs, \{DIMACS\} graphs, and other graphs from the literature. "
}

@article{PCModel,
title = "Modeling the packing coloring problem of graphs ",
journal = "Applied Mathematical Modelling ",
volume = "39",
number = "13",
pages = "3588 - 3595",
year = "2015",
issn = "0307-904X",
doi = "http://dx.doi.org/10.1016/j.apm.2014.11.060",
url = "http://www.sciencedirect.com/science/article/pii/S0307904X14006556",
author = "Zehui Shao and Aleksander Vesel",
keywords = "Frequency assignment",
keywords = "Packing chromatic number",
keywords = "Integer linear programming",
keywords = "Cartesian product ",
abstract = "Abstract The frequency assignment problem asks for assigning frequencies to transmitters in a wireless network and includes a variety of specific subproblems. In particular, the packing coloring problem comes from the regulations concerning the assignment of broadcast frequencies to radio stations. The problem is placed on a graph-theoretical footing and modeled as the packing chromatic number χ ρ ( G ) of a graph G. The packing chromatic number of G is the smallest integer k such that the vertex set V ( G ) can be partitioned into disjoint classes X 1 , … , X k , with the condition that vertices in X i have pairwise distance greater than i. The determination of the packing chromatic number is known to be NP-hard. This paper presents an integer linear programming model and a satisfiability test model for the packing coloring problem. The proposed models were applied for studying the packing chromatic numbers of Cartesian products of paths and cycles and for the packing chromatic numbers of some distance graphs."}


@article{DistanceGraph,
title = "The packing coloring of distance graphs ",
journal = "Discrete Applied Mathematics ",
volume = "167",
number = "",
pages = "100 - 106",
year = "2014",
note = "",
issn = "0166-218X",
doi = "http://dx.doi.org/10.1016/j.dam.2013.10.036",
url = "http://www.sciencedirect.com/science/article/pii/S0166218X13004794",
author = "Jan Ekstein and Přemysl Holub and Olivier Togni",
keywords = "Distance graph",
keywords = "Packing coloring",
keywords = "Packing chromatic number ",
abstract = "Abstract The packing chromatic number χ ρ ( G ) of a graph G is the smallest integer p such that vertices of G can be partitioned into disjoint classes X 1 , … , X p where vertices in X i have pairwise distance between them greater than i . For k &lt; t we study the packing chromatic number of infinite distance graphs D ( k , t ) , i.e.graphs with the set Z of integers as vertex set and in which two distinct vertices i , j ∈ Z are adjacent if and only if | i − j | ∈ { k , t } . We generalize results given by Ekstein et al. for graphs D ( 1 , t ) . For sufficiently large t we prove that χ ρ ( D ( k , t ) ) ≤ 30 for both k and t odd, and that χ ρ ( D ( k , t ) ) ≤ 56 for exactly one of k and t odd. We also give some upper and lower bounds for χ ρ ( D ( k , t ) ) with small k and t . "
}

@article{Sloper,
title = "An eccentric coloring of trees",
journal = "Australasian Journal of Combinatorics",
volume = "29",
number = "",
pages = "309 - 321",
year = "2004",
note = "",
url = "https://www.researchgate.net/publication/250790465_An_Eccentric_Coloring_of_Trees",
author = "Christian Sloper",
keywords = "Packing coloring",
abstract = "Eccentric coloring is a new variation of coloring, where higher numbered
colors cannot be used as freely as lower numbered colors. In addition
there is a correspondence between the eccentricity (max distance) of a
vertex and the highest legal color for that vertex.
In this note we investigate eccentric coloring of trees. We give the ec-
centric chromatic number or a bound on the eccentric chromatic number
for several simple classes of trees. In particular we show the eccentric
chromatic number for paths (χ e = 3), spiders (χ e = 3) and caterpillars
(χ e ≤ 7).
Further, we discuss the eccentric chromatic number of complete k-ary
trees and show that the complete binary trees have eccentric chromatic
number χ e ≤ 7. We also show that large binary trees are eccentrically col-
orable and have χ e ≤ 7. We then conclude by showing that no complete
k-ary tree, k ≥ 3, is eccentrically colorable. "
}

